<script>
  function LoadDataDromDb() {
    var data = {};
    var distributorId = user_id
    data.distributorId = distributorId;
    $.ajax({
      type: 'POST',
      data: JSON.stringify(data), //input data to be sent to the server
      contentType: 'application/json; charset=utf-8',
      dataType: "json",
      url: "/transactions/gettransactionadmin",
      success: function(res) {
        console.log('success');
        console.log(res);
        if (res.Status == "1000") {
          updateDataTable(res)
        }


      },
      error: function() {
        console.log("Device control failed");
      }
    });

  }

  var mytable;

  function updateDataTable(dataAsJsonArry) {


    var shopNumber = dataAsJsonArry.Data.transactions.length
    $('#shop_number').text(shopNumber);

    console.log(dataAsJsonArry.Data);
    if (mytable)
      mytable.destroy();

    mytable = $('#shopsDatatable').DataTable({
      destory: true,
      "scrollX": true,
      destory: true,
      bRetrieve: true,
      searching: true,
      data: dataAsJsonArry.Data.transactions,
      columns: [{
          data: "date"
        }, {
          data: "recipientPhone"
        },
        {
          data: "operatorName"
        },
        {
          data: "amount"
        },
        {
          data: "senderPhone"
        },
        {
          data: "success"
        }, {
          data: "discount"
        }, {
          data: "transactionId"
        }
      ]

    });
    console.log("Reload table");
    mytable.draw();

  }

  var user_id

  var phone

  $(document).ready(function() {
    user_id = Cookies.get('user_id');
    phone = Cookies.get('phone');
    console.log("user_id");
    console.log(user_id);
    console.log("phone");
    console.log(phone);
    $('#username_text').text(phone);
    mytable = null;
    LoadDataDromDb();
    console.log("document ready");
  });
</script>









