<script>
  function LoadDataDromDb() {
    var data = {};


    var distributorId = user_id

    data.distributorId = distributorId;

    console.log(data)
    $.ajax({
      type: 'POST',
      data: JSON.stringify(data), //input data to be sent to the server
      contentType: 'application/json; charset=utf-8',
      dataType: "json",
      url: "/distributor/getdistributorWalletTransaction",
      success: function(res) {
        console.log('success');
        console.log(res);
        var statusCode = res.statusCode
        var status = res.status
        console.log("status" + status);
        console.log("statusCode" + statusCode);
        if (statusCode == "200") {
          updateDataTable(res)
        }


      },
      error: function() {
        console.log("Device control failed");
      }
    });

    $.ajax({
      type: 'POST',
      data: JSON.stringify(data), //input data to be sent to the server
      contentType: 'application/json; charset=utf-8',
      dataType: "json",
      url: "/distributor/getAllWalletTranactions",
      success: function(res) {
        console.log('success');
        console.log(res);
        var statusCode = res.statusCode
        var status = res.status
        console.log("status" + status);
        console.log("statusCode" + statusCode);
        if (statusCode == "200") {
          updateTransactionTable(res)
        }


      },
      error: function() {
        console.log("Device control failed");
      }
    });

  }


  function LoadShopsList() {
    var data = {};
    var distributorId = user_id
    data.distributorId = distributorId;
    $.ajax({
      type: 'POST',
      data: JSON.stringify(data), //input data to be sent to the server
      contentType: 'application/json; charset=utf-8',
      dataType: "json",
      url: "/shop/getshopBydistributor",
      success: function(res) {
        console.log('success');
        console.log(res);
        var statusCode = res.statusCode
        var status = res.status
        console.log("status" + status);
        console.log("statusCode" + statusCode);
        if (statusCode == "200") {

          var list = $("#slect_shop");
          $.each(res.data, function(index, item) {
            list.append(new Option(item.phone, item._id));
          });

        }


      },
      error: function() {
        console.log("Device control failed");
      }
    });

  }




  var transTable

  function updateTransactionTable(dataAsJsonArry) {
    console.log(dataAsJsonArry.data);
    if (transTable)
      transTable.destroy();

    transTable = $('#transactionsDatatable').DataTable({
      destory: true,
      "scrollX": true,
      destory: true,
      bRetrieve: true,
      searching: true,
      data: dataAsJsonArry.data,
      columns: [{
          data: "createdAt"
        },
        {
          data: "phone"
        },
        {
          data: "amount"
        },
        {
          data: "wallet_balance"
        }

      ]

    });
    console.log("Reload table");
    transTable.draw();

  }

  var mytable;




  function updateDataTable(dataAsJsonArry) {
    console.log(dataAsJsonArry.data);
    if (mytable)
      mytable.destroy();

    mytable = $('#shopsDatatable').DataTable({
      destory: true,
      "scrollX": true,
      destory: true,
      bRetrieve: true,
      searching: true,
      data: dataAsJsonArry.data,
      columns: [

        // {
        //   data: "createdAt"
        // },
        {
          data: "phone"
        },
        {
          data: "wallet_balance"
        },
        {
          data: null,
          render: function(data, row, type) {
            var html = '<div role="group" aria-label="Basic example" class="btn-group btn-group-sm alignclass">';
            html += '<button type="button" data_id=' + data._id + ' class="btnEdit btn btn-outline-success"><i class="ti-pencil"></i></button>';
            html += '<button type="button" data_id=' + data._id + '  class="btnDelete btn btn-outline btn-danger"><i class="ti-trash"></i></button>';
            html += '</div>';
            return html;
          },
          "bSortable": false
        }
      ]

    });
    console.log("Reload table");
    mytable.draw();

  }




  var user_id

  var phone

  $(document).ready(function() {


    user_id = Cookies.get('user_id');
    phone = Cookies.get('phone');

    mytable = null;
    LoadShopsList();

    LoadDataDromDb();




    console.log("document ready");
    $("#addshops").click(function(e) {
      e.preventDefault();
      console.log("click done");
      url = "/distributor/addWalletAmount"
      console.log(url);
      var data = {};
      var amount = $('#amount').val();
      var distributorId = user_id
      var shopId = $('#slect_shop').val();

      data.amount = amount;
      data.shopId = shopId;
      data.distributorId = distributorId;

      //input
      console.log(JSON.stringify(data));
      $.ajax({
        type: 'POST',
        data: JSON.stringify(data), //input data to be sent to the server
        contentType: 'application/json; charset=utf-8',
        dataType: "json",
        url: url,
        success: function(res) {
          console.log('success');
          console.log(res);
          var statusCode = res.statusCode
          var message = res.message
          var status = res.status
          console.log("Message" + message);
          console.log("status" + status);
          console.log("statusCode" + statusCode);
          if (statusCode == "200") {
            LoadDataDromDb();
            $('#shopId').val("");
            $('#amount').val("");
            $('#slect_shop').val(-1);
            swal("Success", message, "successs");
          } else {
            swal("Oops", message, "error");
          }
        },
        error: function() {
          console.log("Device control failed");
        }
      });
    });


    $(document).on('click', '.btnEdit', function() {
      var id = $(this).attr('data_id');
      console.log("DATA ID" + id);
      url = "/transactions/getwallet"
      console.log(url);
      var data = {};
      data.shopId = id; //input
      console.log(JSON.stringify(data));
      $.ajax({
        type: 'POST',
        data: JSON.stringify(data), //input data to be sent to the server
        contentType: 'application/json; charset=utf-8',
        dataType: "json",
        url: url,
        success: function(res) {
          console.log('success');
          console.log(res);
          var statusCode = res.statusCode
          var message = res.message
          var status = res.status
          console.log("Message" + message);
          console.log("status" + status);
          console.log("statusCode" + statusCode);
          if (statusCode == "200") {


            $('#phone').val(res.data.phone);
            $('#commision').val(res.data.commision);
            $('#shopId').val(res.data._id);
            $('#addshops').text("UPDATE");

          } else {
            swal("Oops", message, "error");
          }
        },
        error: function() {
          console.log("Device control failed");
        }
      });
    });
    $(document).on('click', '.btnDelete', function() {
      var id = $(this).attr('data_id');
      console.log("DATA ID" + id);
      url = "/shop/deleteShopbyId"
      console.log(url);
      var data = {};
      data.shopId = id; //input
      console.log(JSON.stringify(data));
      swal({
          title: "Are you sure?",
          text: "You will not be able to recover this category !",
          type: "warning",
          showCancelButton: true,
          confirmButtonColor: '#DD6B55',
          confirmButtonText: 'Yes, I am sure!',
          cancelButtonText: "No, cancel it!",
          closeOnConfirm: false,
          closeOnCancel: false
        },
        function(isConfirm) {
          if (isConfirm) {
            $.ajax({
              type: 'POST',
              data: JSON.stringify(data), //input data to be sent to the server
              contentType: 'application/json; charset=utf-8',
              dataType: "json",
              url: url,
              success: function(res) {
                console.log('success');
                console.log(res);
                var statusCode = res.statusCode
                var message = res.message
                var status = res.status
                console.log("Message" + message);
                console.log("status" + status);
                console.log("statusCode" + statusCode);
                if (statusCode == "200") {
                  LoadDataDromDb();
                  swal({
                    title: "Success!",
                    text: "You have deleted the user !",
                    icon: "success",
                    button: "Close",
                  });
                } else {
                  swal("Oops", message, "error");
                }
              },
              error: function() {
                console.log("Device control failed");
              }
            });
          } else {
            swal("Cancelled", "Click ok to close");
            e.preventDefault();
          }
        });
    });
  });
</script>

